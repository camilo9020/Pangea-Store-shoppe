								<div class="single-item-caption">
									<a class="add-to-cart pull-left" href="product.html#"><i class="fa fa-shopping-cart"></i></a>
									<a class="beta-btn primary" href="product.html#">Details <i class="fa fa-chevron-right"></i></a>
									<div class="clearfix"></div>
								</div>
							</div>
						</div>
					</div>
				</div> <!-- .beta-products-list -->
			</div>
			<div class="col-sm-3 aside">
				

				<div class="widget">
				   <h3 class="widget-title">Mas vendidos</h3>
				   <div class="widget-body">
				      <div class="beta-sales beta-lists">
				      <% @bestSellers.each do |product| %>
				         <div class="media beta-sales-item">                        
				            <% if product.default_image %>
				              <%= link_to product_path(product.permalink), class:"pull-left"  do %>
				                 <% image_tag product.default_image.path, :size => "55x58" %>
				              <% end %>                               
				            <% end %>                         
				            <div class="media-body">
				               <%= product.name %>
				               <span class="beta-sales-price"><%= number_to_currency product.price %></span>
				            </div>
				         </div>
				      <% end %>
				      </div>
				   </div>
