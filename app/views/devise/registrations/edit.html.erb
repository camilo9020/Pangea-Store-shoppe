<div class="inner-header">
   <div class="container">
      <div class="pull-left">
         <h6 class="inner-title">Editar Usuario</h6>
      </div>
      <div class="pull-right">
         <div class="beta-breadcrumb">
            <a href="index.html">Home</a> / <span>Editar Usuario</span>
         </div>
      </div>
      <div class="clearfix"></div>
   </div>
</div>
<div class="container">
   <div id="content">      
      <div class="space10">&nbsp;</div>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>        
        <%= devise_error_messages! %>
         <div class="row">
            <div class="col-sm-6">
               <h4>Editar Usuario</h4>
               <div class="space20">&nbsp;</div>
               
               <div class="form-block">
                  <%= f.label :first_name, "Nombres*" %>
                  <%= f.text_field :first_name, autofocus: true %>                  
               </div>
               <div class="form-block">
                  <%= f.label :last_name, "Apellidos*" %>
                  <%= f.text_field :last_name, autofocus: true %>                  
               </div>               
               <div class="form-block">
                  <label for="your_country">Pais*</label>
                  <select name="your_country" id="your_country">                     
                     <option value="CO" selected="selected">Colombia</option>                     
                  </select>
               </div>
               <div class="form-block">
                  <%= f.label :state, "Departamento*" %>
                  <%= f.text_field :state, autofocus: true, :placeholder => "Departamento" %>                  
               </div>
               <div class="form-block">                  
                  <%= f.label :city, "Ciudad*" %>
                  <%= f.text_field :city, autofocus: true, :placeholder => "Ciudad" %> 
               </div>
               <div class="form-block">                  
                  <%= f.label :address, "Dirección*" %>
                  <%= f.text_field :address, autofocus: true, :placeholder => "Dirección" %> 
                 <!-- <input type="text" id="apartment" placeholder="Apartamento, suite, unidad etc." required>-->
               </div>               
               <div class="form-block">
                  <%= f.label :phone, "Teléfono*" %>
                  <%= f.text_field :phone, autofocus: true %>                  
               </div>
               <div class="form-block">
                  <%= f.label :password, "Password Actual*"  %>
                  <%= f.password_field :current_password, autocomplete: "off" %>                 
               </div>
               <div class="form-block">
                  <%= f.label :password, "Password*"  %>
                  <%= f.password_field :password, autocomplete: "off" %>                 
               </div>
               <div class="form-block">
                  <%= f.label :password_confirmation, "Confirmación*" %>
                  <%= f.password_field :password_confirmation, autocomplete: "off" %>               
               </div>
               
               
               <div class="space20">&nbsp;</div>
             
              
                <div class="actions">
                  <div class="text-center">
                          <%= link_to "Actualizar<i class='fa fa-chevron-right'></i>".html_safe , "#", :onclick => "$('#edit_user').submit()", :class => "beta-btn primary"  %>
                  </div>
                </div>
              
            </div>
            <div class="col-sm-6">
               
            </div>
         </div>
      <% end %>
   </div>
   <!-- #content -->
</div>
<!-- .container -->
